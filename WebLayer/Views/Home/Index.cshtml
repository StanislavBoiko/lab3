@model IEnumerable<AccountViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Accounts</h1>
    <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-square"></i> Create new account
    </a>
    <a class="btn btn-primary" asp-action="Transfer"><i class="bi bi-plus-square"></i> Transfer money between accounts</a>
</div>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>
            Account Name
        </th>
        <th>
            Current Balance
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var account in Model)
    {
        <tr>
            <td>
                <a asp-controller="Account" asp-action="Index" asp-route-id="@account.Id">
                    @account.Name
                </a>
            </td>
            <td>
                @account.CurrentBalance
            </td>
        </tr>
    }
    </tbody>
</table>